<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quantitive Trading</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuantumBasedQuantTrading.Web.styles.css" asp-append-version="true" />
    @RenderSection("head", required: false)
</head>
<body>
    <header>
        <nav class="navbar d-flex navbar-dark bg-dark px-4">
            <div class="container-fluid">
                <a class="navbar-brand font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Quantitive Trading</a>

                <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="firstNav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MachineLearningView">Latest Stock Prediction</a>
                    </li>
                </ul>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation"
                        onclick="toggleFirstNav()">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MachineLearningView">Latest Stock Prediction</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MachineLearning">New Prediction</a>
                        </li>
                        <partial name="_AdminPartial" />
                    </ul>

                    <div class="d-flex align-items-center ms-auto">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Quantitive Trading
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        let isNavHidden = false;

        function toggleFirstNav() {
            const firstNav = document.getElementById("firstNav");

            if (firstNav) {
                if (isNavHidden) {
                    firstNav.style.display = "block";
                    isNavHidden = false;
                } else {
                    firstNav.style.display = "none";
                    isNavHidden = true;
                }
            }
        }
    </script>
</body>
</html>
